<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--try to navigate user from NotificationDialog to leaderboard but fail;-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonClose"
        android:text="@string/close"
        android:layout_marginStart="58dp"
        android:onClick="close"
        android:layout_alignBaseline="@+id/buttonToLeaderboard"
        android:layout_alignBottom="@+id/buttonToLeaderboard"
        android:layout_toEndOf="@+id/buttonToLeaderboard" />

    <TextView
        android:text="@string/dialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewDialog"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="viewStart"
        android:textColor="@color/available_color"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/Leaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/buttonToLeaderboard"
        android:onClick="goToLeaderboard"
        android:layout_below="@+id/TextViewDialog"
        android:layout_alignParentStart="true" />
</RelativeLayout>
